<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_medium"
    app:cardCornerRadius="@dimen/corner_radius_large"
    app:cardElevation="@dimen/elevation_small"
    app:cardBackgroundColor="@color/background_white"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="@color/primary_blue_ultra_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding">

        <!-- Booking Code Badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bookingCodeCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_small"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/primary_blue_ultra_light"
            app:strokeWidth="1dp"
            app:strokeColor="@color/primary_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/bookingCodeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABC123"
                android:textColor="@color/primary_blue"
                android:textSize="12sp"
                android:textStyle="bold"
                android:padding="@dimen/spacing_small"
                tools:text="ABC12345" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Status Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/statusChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textSize="12sp"
            android:textStyle="bold"
            app:chipBackgroundColor="@color/warning"
            app:chipStrokeColor="@color/warning"
            app:chipStrokeWidth="1dp"
            app:chipMinHeight="24dp"
            app:chipStartPadding="8dp"
            app:chipEndPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

        <!-- Nursery Name -->
        <TextView
            android:id="@+id/nurseryNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nursery Name"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/spacing_small"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bookingCodeCard"
            tools:text="Hope Nursery" />

        <!-- Child Info -->
        <LinearLayout
            android:id="@+id/childInfoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nurseryNameTextView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child Name: "
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/childNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Child Name"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Ahmed Mohammed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: "
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/spacing_medium" />

            <TextView
                android:id="@+id/childAgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="5 years" />
        </LinearLayout>

        <!-- Parent Info -->
        <LinearLayout
            android:id="@+id/parentInfoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_tiny"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/childInfoLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent: "
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/parentNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Parent Name"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Mohammed Ahmed" />

            <TextView
                android:id="@+id/parentPhoneTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0501234567"
                android:textColor="@color/primary_blue"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/spacing_medium"
                tools:text="0501234567" />
        </LinearLayout>

        <!-- Fee and Actions -->
        <LinearLayout
            android:id="@+id/actionsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/spacing_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parentInfoLayout">

            <TextView
                android:id="@+id/feeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Registration Fee: $1000"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Registration Fee: $1000" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirmButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_small"
                android:text="Accept"
                android:textColor="@color/success"
                android:textSize="12sp"
                android:textStyle="bold"
                android:minWidth="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginStart="@dimen/spacing_small"
                app:icon="@android:drawable/ic_menu_upload"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                app:iconTint="@color/success"
                app:strokeColor="@color/success"
                app:strokeWidth="1dp"
                app:cornerRadius="@dimen/corner_radius_small"
                app:rippleColor="@color/success_light" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rejectButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_small"
                android:text="Reject"
                android:textColor="@color/error"
                android:textSize="12sp"
                android:textStyle="bold"
                android:minWidth="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginStart="@dimen/spacing_small"
                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                app:iconTint="@color/error"
                app:strokeColor="@color/error"
                app:strokeWidth="1dp"
                app:cornerRadius="@dimen/corner_radius_small"
                app:rippleColor="@color/error_light" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>


