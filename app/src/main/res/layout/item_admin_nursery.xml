<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_medium"
    app:cardCornerRadius="@dimen/corner_radius_large"
    app:cardElevation="@dimen/elevation_small"
    app:cardBackgroundColor="@color/background_white"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="@color/primary_blue_ultra_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding">

        <!-- Nursery Image -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/imageCard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/nurseryImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/gray_light"
                android:contentDescription="@string/nursery_details" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Nursery Info -->
        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_small"
            app:layout_constraintEnd_toStartOf="@+id/actionsLayout"
            app:layout_constraintStart_toEndOf="@+id/imageCard"
            app:layout_constraintTop_toTopOf="@+id/imageCard">

            <TextView
                android:id="@+id/nurseryNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nursery Name"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Hope Nursery" />

            <TextView
                android:id="@+id/nurseryLocationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Riyadh" />

            <!-- Status Badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/statusChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/spacing_small"
                app:chipBackgroundColor="@color/success_light"
                app:chipStrokeColor="@color/success"
                app:chipStrokeWidth="1dp"
                app:chipMinHeight="24dp"
                app:chipStartPadding="8dp"
                app:chipEndPadding="8dp"
                style="@style/Widget.MaterialComponents.Chip.Choice" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/actionsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_small"
                android:text="@string/edit"
                android:textColor="@color/primary_blue"
                android:textSize="12sp"
                android:textStyle="bold"
                android:minWidth="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                app:iconTint="@color/primary_blue"
                app:strokeColor="@color/primary_blue"
                app:strokeWidth="1dp"
                app:cornerRadius="@dimen/corner_radius_small"
                app:rippleColor="@color/primary_blue_ultra_light" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_small"
                android:text="@string/delete"
                android:textColor="@color/error"
                android:textSize="12sp"
                android:textStyle="bold"
                android:minWidth="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="@dimen/spacing_small"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                app:iconTint="@color/error"
                app:strokeColor="@color/error"
                app:strokeWidth="1dp"
                app:cornerRadius="@dimen/corner_radius_small"
                app:rippleColor="@color/error_light" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
