<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".SplashActivity">

    <!-- Decorative Circles -->
    <View
        android:id="@+id/decorativeCircle1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/circle_background"
        android:alpha="0.15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="-50dp" />

    <View
        android:id="@+id/decorativeCircle2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle_background"
        android:alpha="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-50dp"
        android:layout_marginStart="-50dp" />

    <!-- Logo Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/logoCard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="@color/background_white"
        app:layout_constraintBottom_toTopOf="@+id/appNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo_warm_clouds"
            tools:ignore="ContentDescription"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:padding="20dp" />
    </com.google.android.material.card.MaterialCardView>

    <!-- App Name -->
    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WARM CLOUDS"
        android:textColor="@color/primary_blue"
        android:textSize="42sp"
        android:textStyle="bold"
        android:letterSpacing="0.03"
        android:layout_marginTop="@dimen/spacing_xlarge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoCard"
        app:layout_constraintVertical_bias="0.4" />

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/primary_blue"
        android:layout_marginTop="@dimen/spacing_xlarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appNameTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>

